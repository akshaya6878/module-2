#include<stdio.h>
int main()
{
    int n1,n2,*ptr1,*ptr2,sum,sub,mul;
    float division;
 printf("enter any two numbers");
    scanf("%d%d",&n1,&n2);
    ptr1=&n1;
    ptr2=&n2;
    sum=(*ptr1)+(*ptr2);
    sub=(*ptr1)-(*ptr2);
    mul=(*ptr1)*(*ptr2);
    division=(*ptr1)/(*ptr2);
    printf("sum=%d\n",sum);
    printf("subtraction=%d\n",sub);
    printf("multiplication=%d\n",mul);
    printf("division=%f\n",division);
    return 0;
}
